{
  "name": "zephyr-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end testing infrastructure for Zephyr voting application",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "private": true,
  "scripts": {
    "test:e2e": "playwright test --config=tests/e2e/config/playwright.config.js",
    "test:e2e:headed": "playwright test --config=tests/e2e/config/playwright.config.js --headed",
    "test:e2e:debug": "playwright test --config=tests/e2e/config/playwright.config.js --debug",
    "test:e2e:ui": "playwright test --config=tests/e2e/config/playwright.config.js --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ci": "CI=true playwright test --config=tests/e2e/config/playwright.config.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "lerna": "^9.0.0",
    "playwright": "^1.40.0",
    "wait-on": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {}
}
