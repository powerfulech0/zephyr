# Server Configuration
NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zephyr_dev
DB_USER=zephyr
DB_PASSWORD=zephyr_dev_password
DB_POOL_MAX=20
DB_QUERY_TIMEOUT=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100            # 100 requests per window

# Data Retention & Cleanup Jobs
CLEANUP_ENABLED=true
POLL_RETENTION_DAYS=30
AUDIT_RETENTION_DAYS=90
PARTICIPANT_TIMEOUT_MINUTES=30

# Secret Management
SECRET_BACKEND=env  # Options: env, vault, aws

# Optional Host Authentication
HOST_AUTH_ENABLED=false
HOST_AUTH_SECRET=change-this-in-production

# Feature Flags
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true
